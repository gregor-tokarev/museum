<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Security-Policy" content="default-src *; style-src 'self' http://* 'unsafe-inline'; script-src 'self' http://* 'unsafe-inline' 'unsafe-eval'" />
    <link rel="stylesheet" href="/static/style/header.css">
    <link rel="stylesheet" href="/static/style/toy.css">
    <link rel="stylesheet" href="/static/style/main.css">
    <title>Главная</title>
    <script type="text/javascript" src="https://vk.com/js/api/openapi.js?168"></script>
</head>

<body>
<%- include('blocks/header.ejs') %>
<div class="container">
<div class="body toy_block">
    <div class="body toy_imgs">
        <div class="mini_block">
            <% toy.images.forEach((url, index) => { %>
                <div class="mini_container <%= index === 0 ? 'mini_container--active' : '' %>">
                    <div class="mini_image mini_image_ch"><img src="<%= url %>" alt=""></div>
                </div>
            <% }) %>
        </div>
        <div class="norm_image"><img src="<%= toy.images[0] %>" alt=""></div>
    </div>
    <div class="toy_info">
        <div class="toy_rar"><%= toy.status %></div>
        <h1 class="name_toy"><%= toy.title %></h1>
        <p class="toy_descr">
            <%= toy.desc %>
        </p>
    </div>
</div>
<div class="comments" id="vk_comments"></div>
<script type="text/javascript">
VK.init({
  apiId: 7819788,
  onlyWidgets: true
});
VK.Widgets.Comments('vk_comments', {limit: 15, attach: '*'})
</script>

</div>
<script defer src="/static/js/toy.js"></script>
</body>

</html>
